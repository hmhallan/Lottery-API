node{
    stage('preparation'){
        git 'https://github.com/pietrocaselani/Lottery-API.git'
    }
    stage('Build and Code analisys'){
        parallel(
            "Build" : {
                sh './gradlew build'
            },
            "Sonar analisys" :{
                withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
                    sh "echo ${SONAR_TOKEN}"
                    sh "./gradlew -Dsonar.login=${SONAR_TOKEN} sonarqube "
                }
            }
        )
    }
}
